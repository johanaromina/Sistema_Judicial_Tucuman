# Configuración del servidor
PORT=3001
NODE_ENV=development

# Base de datos
DATABASE_URL=mysql://user:password@localhost:3306/spjt_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=spjt_user
DB_PASSWORD=spjt_password
DB_NAME=spjt_db

# JWT
JWT_ACCESS_SECRET=your_super_secret_access_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Almacenamiento
STORAGE_DRIVER=disk
STORAGE_PATH=./uploads
S3_BUCKET=your-s3-bucket
S3_KEY=your-s3-access-key
S3_SECRET=your-s3-secret-key
S3_REGION=us-east-1

# Firma electrónica
SIGN_PROVIDER=local
SIGN_CERT_PATH=./certs/certificate.pem
SIGN_KEY_PATH=./certs/private-key.pem

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Seguridad
CORS_ORIGIN=http://localhost:3002
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 